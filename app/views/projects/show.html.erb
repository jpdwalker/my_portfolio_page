<div id="post_show_content" class="skinny-wrapper wrapper_padding">
  <header>
    <p class="date"><%=  @project.created_at.strftime("%b %d, %Y" ) %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <p><%= markdown @project.description %></p>
    <div class="button_wrapper">
      <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
    </div>
  </div>

    <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit Project", edit_project_path(@project)  %>
      <%= link_to "Delete Project", project_path(@project), method: :delete, data: { confirm: "Are you sure?"}  %>
    </div>
  <% end %>

  <hr>

</div>
