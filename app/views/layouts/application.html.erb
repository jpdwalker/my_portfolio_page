<!DOCTYPE html>
<html>
  <head>
    <title>Joe Walker - Full Stack Developer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//kit.fontawesome.com/54975fbe75.js"></script>
    <link href="//fonts.googleapis.com/css?family=DM+Sans&display=swap" rel="stylesheet">
    <link rel='icon' type='image/png' href='favicon.png' />
  </head>


  <body>

  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% elsif alert %>
    <p class="alert"><%= alert %></p>
  <% end %>

    <%= yield %>
  <%= render 'shared/footer' %>
  </body>
</html>
